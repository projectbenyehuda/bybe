.backend
  %h2= t(:sitenotice_management)

  %a{ href: sitenotice_new_path}
    .btn{style: 'float:none'}
      %b= t(:new_sitenotice)
  %p
  %br
  %table{style: 'cell-spacing: 10;'}
    %tr
      %th= t(:fromdate)
      %th= t(:todate)
      %th= t(:sitenotice_body)
      %th= t(:status)

    - @sns.each do |v|
      %tr
        %td= v.fromdate.to_s
        %td= v.todate.to_s
        %td= link_to v.body, sitenotice_show_path(v)
        %td!= v.enabled? ? "&#10004;" : ''
        %td
          = link_to t(:edit), sitenotice_show_path(v)
          = link_to t(:destroy), sitenotice_destroy_path(v), data: { confirm: t(:are_you_sure)}
  != paginate @sns
