.card{ style: 'width:70%;text-align:center;' }
  .card-content
    = form_for [:admin, fc] do |f|
      .backend-field
        = f.label t(:title)
        = f.text_field :title
      .backend-field
        = f.label t(:featured_content_body)
        = f.text_area :body, rows: 10, cols: 100
      .backend-field
        = f.label t(:linked_author)
        = autocomplete_field_tag :person,
                                 fc.person&.authority&.name || '',
                                 autocomplete_person_name_path,
                                 id_element: '#person_id',
                                 data: { noMatchesLabel: t(:no_matches_found) }
        = hidden_field_tag 'featured_author[person_id]', fc.person&.id, id: 'person_id'
      .actions
        = f.submit t(:save)
