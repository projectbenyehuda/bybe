%li
  - if h.bib_source.manual_entry?
    = textify_bib_source(h.bib_source.id)
    - if h.source_id.present?
      = " (#{link_to(h.source_id, h.source_id, target: '_blank', rel: :noopener)})"
  - else
    = link_to(textify_bib_source(h.bib_source.id), h.source_id)
  = " #{h.location}"
  - if with_actions == :pubs
    = ' '
    = select_tag "h_#{h.id}_actions", options_for_select(Holding.statuses.map{|k, v| [t(k), k]}, h.status), onchange: "$.post('#{holding_path(h.id)}', {'_method':'put', 'holding[status]':this.value}, null, 'script' );"
