- url = @lex_publication.new_record? ? (@person ? lexicon_person_publications_path(@person) : lexicon_publications_path) : lexicon_publication_path(@lex_publication)
= simple_form_for @lex_publication, url: url, remote: true do |f|
  = f.simple_fields_for :entry do |ef|
    = ef.input :title
    - if @lex_publication.entry&.status
      = ef.input :status do
        .form-control
          %span.badge.badge-primary= @lex_publication.entry.status
  = f.input :description, as: :text, input_html: { rows: 5 }, label: t('activerecord.attributes.lex_publication.description')
  = f.button :submit, class: 'btn btn-primary'
