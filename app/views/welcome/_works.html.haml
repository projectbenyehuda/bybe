- cache "homepage_genres", expires_in: 12.hours do
  .by-card-v02#genre
    .by-card-header-v02
      %span.headline-1-v02= t(:genres_and_types)
    .by-card-content-v02
      .row
        - ['poetry', 'prose', 'drama', 'fables'].each do |g|
          = render partial: 'genre', locals: {genre: g, mobile: false}
        - ['article', 'memoir', 'letters', 'reference'].each do |g|
          = render partial: 'genre', locals: {genre: g, mobile: false}
        .col-md-3.col-4{style: "margin-left: auto; margin-right:auto;"}
          %a{href: manifestation_genre_path(genre: 'lexicon')}
            .genre-nav
              %p.by-genre-icon-v02= 'f'
              %p.by-genre-name-v02.headline-2-v02= textify_genre('lexicon')
              %p.by-genre-details-v02= @authors_in_genre['lexicon'].to_s+' '+t(:authors)
              %p.by-genre-details-v02= get_total_headwords.to_s.to_s+' '+t(:entries)
        -#.by-card-content-seapartor
        -# types (anthologies, journals, etc.) go here
        .by-card-content-seapartor
        .col-md-3.col-4{style: "margin-left: auto; margin-right:auto;"}
          %a{href: translations_path}
            .genre-nav
              %p.by-genre-icon-v02= 's'
              %p.by-genre-name-v02.headline-2-v02= t(:translations)
              %p.by-genre-details-v02 #{Authority.no_toc.count} #{t(:authors)}
              %p.by-genre-details-v02= Manifestation.cached_translated_count.to_s+' '+t(:works)
      .by-card-content-seapartor
      .row
        .col-md-3.col-4
          %a{href: periodicals_index_path}
            .genre-nav
              %p.by-genre-icon-v03 H
              %p.by-genre-name-v02.headline-2-v02= t(:periodicals_label)
              %p.by-genre-details-v02= @periodicals_count.to_s+' '+t(:periodicals_label)
              %p.by-genre-details-v02= @periodicals_text_count.to_s+' '+t(:works)
        .col-md-3.col-4
          %a{href: pby_volumes_path}
            .genre-nav
              %p.by-genre-icon-v03 J
              %p.by-genre-name-v02.headline-2-v02= t(:pby_publications)
              %p.by-genre-details-v02= t(:x_volumes, x: @pby_volumes_count)
              %p.by-genre-details-v02= t(:x_works, x: @pby_works_count)
        #matrix-wide.col-md-3.col-4{:style => "margin-left: auto; margin-right:auto"}
          %a{href: anthologies_browse_path}
            .genre-nav
              %p.by-genre-icon-v02 G
              %p.by-genre-name-v02.headline-2-v02= t(:public_anthologies)
              %p.by-genre-details-v02= t(:x_public_anthologies, x: @public_anthologies_count)
